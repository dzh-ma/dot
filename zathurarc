# Enable recoloring
set recolor true

# Font configuration
set font "IosevkaTermSlab Nerd Font Mono 30"

# Clipboard yanking
set selection-clipboard clipboard

# Keep original hue when recoloring
set recolor-keephue true

# Use SQLite for the database
set database sqlite

# Recoloring for Text and Background
set recolor-darkcolor "#66def9"
set recolor-lightcolor "#06101e"

# Input Bar Colors
set inputbar-bg "#031B26"
set inputbar-fg "#22536f"

# Notification Colors
set notification-bg "#031B26"
set notification-fg "#fd5e3a"

# Status Bar Colors
set statusbar-bg "#031B26"
set statusbar-fg "#22536f"

# Highlight Colors
set highlight-color "#22536f"
set highlight-active-color "#35b5ff"

# Completion Colors
set completion-bg "#031B26"
set completion-fg "#22536f"
set completion-highlight-bg "#35b5ff"
set completion-highlight-fg "#06101e"

# Index Colors
set index-bg "#031B26"
set index-fg "#22536f"
set index-active-bg "#ec30ac"
set index-active-fg "#06101e"

# Enable recoloring
set recolor true

# Keep original hue when recoloring
set recolor-keephue true

# Set dark background color (same as terminal background)
set default-bg "#28323e"

set font "Hurmit Nerd Font Mono 11"
set default-bg "#28323e"
set recolor-lightcolor "#28323e"
set inputbar-bg "#28323e"
set notification-bg "#28323e"
set completion-bg "#28323e"
set index-bg "#28323e"
set index-active-bg "#28323e"
set default-fg "#fdfdfd"  # Match Kitty's foreground
set recolor-darkcolor "#fdfdfd"
set highlight-color "#92b6f4"  # Same as URL color in Kitty
set highlight-active-color "#c574dd"  # Same as cursor color in Kitty
set selection-clipboard clipboard
set recolor-reverse-video "true"
set statusbar-fg              "#fdfdfd"
set statusbar-bg              "#28323e"

set database sqlite

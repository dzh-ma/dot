# Enable recoloring
set recolor true

# Keep original hue when recoloring
set recolor-keephue true

# Set dark background color (same as terminal background)
set default-bg "#FAF2EB"

# Set foreground color for normal text
set default-fg "#1A1918"

# Set recolor-darkcolor (for normal text)
set recolor-darkcolor "#1A1918"

# Set recolor-lightcolor (for background)
set recolor-lightcolor "#FAF2EB"

# Set inputbar colors
set inputbar-bg "#FAF2EB"
set inputbar-fg "#1A1918"

# Set notification colors
set notification-bg "#FAF2EB"
set notification-fg "#1A1918"

# Set page separator color
#set page-separator "#403833"

# Set statusbar colors
set statusbar-bg "#FAF2EB"
set statusbar-fg "#1A1918"

# Set highlight color
set highlight-color "#6099C0"
set highlight-active-color "#66A5AD"

# Set completion colors
set completion-bg "#FAF2EB"
set completion-fg "#1A1918"
set completion-highlight-bg "#6099C0"
set completion-highlight-fg "#FAF2EB"

# Set index colors
set index-bg "#FAF2EB"
set index-fg "#1A1918"
set index-active-bg "#FAF2EB"
set index-active-fg "#1A1918"

# Enable recoloring
set recolor true

# Font configuration
set font "Bedstead 30"

# Clipboard yanking
set selection-clipboard clipboard

# Keep original hue when recoloring
set recolor-keephue true

# Use SQLite for the database
set database sqlite

# Background and Foreground Colors
set default-bg "#000000"
set default-fg "#ffffff"

# Recoloring for Text and Background
set recolor-darkcolor "#ffffff"
set recolor-lightcolor "#000000"

# Input Bar Colors
set inputbar-bg "#000000"
set inputbar-fg "#ffffff"

# Notification Colors
set notification-bg "#000000"
set notification-fg "#ffffff"

# Status Bar Colors
set statusbar-bg "#000000"
set statusbar-fg "#ffffff"

# Highlight Colors
set highlight-color "#ffffff"
set highlight-active-color "#ffffff"

# Completion Colors
set completion-bg "#000000"
set completion-fg "#ffffff"
set completion-highlight-bg "#ffffff"
set completion-highlight-fg "#000000"

# Index Colors
set index-bg "#000000"
set index-fg "#ffffff"
set index-active-bg "#ffffff"
set index-active-fg "#000000"

# Enable recoloring
set recolor true

# Font configuration
set font "JetBrainsMono Nerd Font Mono 10"

# Clipboard yanking
set selection-clipboard clipboard

# Keep original hue when recoloring
set recolor-keephue true

# Use SQLite for the database
set database sqlite

# Background and Foreground Colors
set default-bg "#000000"
set default-fg "#b0bec4"

# Recoloring for Text and Background
set recolor-darkcolor "#b0bec4"
set recolor-lightcolor "#000000"

# Input Bar Colors
set inputbar-bg "#000000"
set inputbar-fg "#676e7b"

# Notification Colors
set notification-bg "#000000"
set notification-fg "#d54e53"

# Status Bar Colors
set statusbar-bg "#000000"
set statusbar-fg "#676e7b"

# Highlight Colors
set highlight-color "#676e7b"
set highlight-active-color "#3dd177"

# Completion Colors
set completion-bg "#000000"
set completion-fg "#676e7b"
set completion-highlight-bg "#3dd177"
set completion-highlight-fg "#000000"

# Index Colors
set index-bg "#000000"
set index-fg "#676e7b"
set index-active-bg "#c678dd"
set index-active-fg "#000000"

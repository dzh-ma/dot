# Font configuration
set font "ProggyClean Nerd Font Mono 20"

# Clipboard yanking
set selection-clipboard clipboard

# Enable recoloring
set recolor true

# Keep original hue when recoloring
set recolor-keephue true

# Use SQLite for the database
set database sqlite

# Base Colors (from Kitty)
set default-bg "#1f282e"
set default-fg "#ffffff"

# Recoloring for Text and Background
set recolor-darkcolor "#ffffff"
set recolor-lightcolor "#1f282e"

# Input Bar Colors
set inputbar-bg "#1f282e"
set inputbar-fg "#ffffff"

# Notification Colors
set notification-bg "#1f282e"
set notification-fg "#ffffff"

# Status Bar Colors
set statusbar-bg "#1f282e"
set statusbar-fg "#ffffff"

# Highlight Colors
# Using selection background for inactive highlights...
set highlight-color "#3c4048"
# ...and the active tab background from Kitty as the active highlight.
set highlight-active-color "#ffbd5e"

# Completion Colors
set completion-bg "#1f282e"
set completion-fg "#ffffff"
set completion-highlight-bg "#3c4048"
set completion-highlight-fg "#ffffff"

# Index Colors
set index-bg "#1f282e"
set index-fg "#ffffff"
# Use the active tab colors for active index items:
set index-active-bg "#ffbd5e"
set index-active-fg "#1f282e"

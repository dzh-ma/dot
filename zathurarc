# Enable recoloring
set recolor true

# Font configuration
set font "CaskaydiaCove Nerd Font Mono 28"

# Clipboard yanking
set selection-clipboard clipboard

# Keep original hue when recoloring
set recolor-keephue true

# Background and Foreground Colors (matching NeoVim's background and foreground)
set default-bg "#000000"
set default-fg "#FFFADE"

# Recoloring for Text and Background
set recolor-darkcolor "#252525"
set recolor-lightcolor "#FFFADE"

# Input Bar Colors
set inputbar-bg "#141414"
set inputbar-fg "#1D918B"

# Notification Colors
set notification-bg "#141414"
set notification-fg "#FC2929"

# Page Separator Color (optional, for visual alignment)
set page-separator "#CCCCCC"

# Status Bar Colors
set statusbar-bg "#141414"
set statusbar-fg "#1D918B"

# Highlight Colors
set highlight-color "#1D918B"
set highlight-active-color "#44B273"

# Completion Colors
set completion-bg "#141414"
set completion-fg "#1D918B"
set completion-highlight-bg "#44B273"
set completion-highlight-fg "#000000"

# Index Colors
set index-bg "#141414"
set index-fg "#1D918B"
set index-active-bg "#D16BB7"
set index-active-fg "#000000"

# Use SQLite for the database
set database sqlite

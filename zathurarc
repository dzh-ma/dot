# Enable recoloring
set recolor true

# Font configuration
set font "Hurmit Nerd Font Mono 26"

# Clipboard yanking
set selection-clipboard clipboard

# Keep original hue when recoloring
set recolor-keephue true

# Background and Foreground Colors (matching Kitty's background and foreground)
set default-bg "#ffffff"
set default-fg "#1a1b26"

# Recoloring for Text and Background
set recolor-darkcolor "#343b58"
set recolor-lightcolor "#ffffff"

# Input Bar Colors
set inputbar-bg "#e1e2e7"
set inputbar-fg "#7aa2f7"

# Notification Colors
set notification-bg "#e1e2e7"
set notification-fg "#f7768e"

# Page Separator Color (optional, for visual alignment)
set page-separator "#9699a3"

# Status Bar Colors
set statusbar-bg "#e1e2e7"
set statusbar-fg "#7aa2f7"

# Highlight Colors
set highlight-color "#7aa2f7"
set highlight-active-color "#4abaaf"

# Completion Colors
set completion-bg "#e1e2e7"
set completion-fg "#7aa2f7"
set completion-highlight-bg "#4abaaf"
set completion-highlight-fg "#1a1b26"

# Index Colors
set index-bg "#e1e2e7"
set index-fg "#7aa2f7"
set index-active-bg "#ad8ee6"
set index-active-fg "#1a1b26"

# Use SQLite for the database
set database sqlite

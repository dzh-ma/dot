# Font configuration
set font "Hasklug Nerd Font 16"

# Clipboard yanking
set selection-clipboard clipboard

# Enable recoloring
set recolor true

# Keep original hue when recoloring
set recolor-keephue true

# Use SQLite for the database
set database sqlite

set default-bg "#000000"

# Set foreground color for normal text
set default-fg "#FF0000"

# Set recolor-darkcolor (for normal text)
set recolor-darkcolor "#FF0000"

# Set recolor-lightcolor (for background)
set recolor-lightcolor "#000000"

# Set inputbar colors
set inputbar-bg "#000000"
set inputbar-fg "#FF0000"

# Set notification colors
set notification-bg "#000000"
set notification-fg "#FF0000"

# Set page separator color
#set page-separator "#403833"

# Set status-bar colors
set statusbar-bg "#000000"
set statusbar-fg "#FF0000"

# Set highlight color
set highlight-color "#6099C0"
set highlight-active-color "#66A5AD"

# Set completion colors
set completion-bg "#000000"
set completion-fg "#FF0000"
set completion-highlight-bg "#6099C0"
set completion-highlight-fg "#000000"

# Set index colors
set index-bg "#000000"
set index-fg "#FF0000"
set index-active-bg "#000000"
set index-active-fg "#FF0000"

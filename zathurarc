# Enable recoloring
set recolor true

# Font configuration
set font "UbuntuMono Nerd Font 18"

# Clipboard yanking
set selection-clipboard clipboard

# Keep original hue when recoloring
set recolor-keephue true

# Use SQLite for the database
set database sqlite

# Default colors
set default-bg "#fffdfb"       # White Chocolate background
set default-fg "#794135"       # White Chocolate foreground

# Recoloring for Text and Background
set recolor-darkcolor "#794135"  # White Chocolate foreground
set recolor-lightcolor "#fffdfb" # White Chocolate background

# Input Bar Colors
set inputbar-bg "#e4d7d3"        # White Chocolate neutral background
set inputbar-fg "#9d8580"        # White Chocolate comment

# Notification Colors
set notification-bg "#e4d7d3"    # White Chocolate neutral background
set notification-fg "#da1306"    # White Chocolate error (red)

# Status Bar Colors
set statusbar-bg "#e4d7d3"       # White Chocolate neutral background
set statusbar-fg "#9d8580"       # White Chocolate comment

# Highlight Colors
set highlight-color "#69b98b"    # White Chocolate current (green)
set highlight-active-color "#1aa7d6" # White Chocolate info (blue)

# Completion Colors
set completion-bg "#e4d7d3"          # White Chocolate neutral background
set completion-fg "#9d8580"          # White Chocolate comment
set completion-highlight-bg "#1aa7d6" # White Chocolate info (blue)
set completion-highlight-fg "#fffdfb" # White Chocolate background

# Index Colors
set index-bg "#e4d7d3"          # White Chocolate neutral background
set index-fg "#9d8580"          # White Chocolate comment
set index-active-bg "#bf1ca2"   # White Chocolate key
set index-active-fg "#fffdfb"   # White Chocolate background
